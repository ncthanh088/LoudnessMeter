<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LoudnessMeter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.FlyoutBehavior="Disabled"
    xmlns:local="clr-namespace:LoudnessMeter"
    xmlns:page="clr-namespace:LoudnessMeter.Views.Pages"
    Shell.NavBarIsVisible="False"
    Title="Sound Level Meter">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate page:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate page:SettingPage}"
        Route="SettingPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate page:AboutPage}"
        Route="AboutPage" />
</Shell>